@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="()=>currentCount+=IncrementValue">Click me</button>
<!-- this method name is lambda expression and it is used to define the click event handler inline -->
<!-- this do the same thing as the IncrementCount method below -->

@code {
    private int currentCount = 0;


    // Define a parameter to set the increment value 
    [Parameter]
    public int IncrementValue { get; set; } = 1;
    private void IncrementCount()
    {
        currentCount += IncrementValue;
    }
}
