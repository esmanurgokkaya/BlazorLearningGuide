@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="()=>currentCount+=IncrementValue">Click me</button>
<!-- this method name is lambda expression and it is used to define the click event handler inline -->
<!-- this do the same thing as the IncrementCount method below -->

<!-- Input event handling demo -->
<div class="m-4">
<input type="text" @oninput = "HandleInput" />
<p>@text</p>
</div>

<!-- Mouse over event handling demo -->
<div style="border: 1px solid black;" @onmouseover="MouseOverDiv">
<p>@divText</p>
</div>

@code {
    private int currentCount = 0;
    private string divText = "";
    // Input event handling demo
    string text = "";
    private void HandleInput(ChangeEventArgs e)
    {
        text = (string)e.Value!;
    }

    // Mouse over event handling demo
    private void MouseOverDiv(MouseEventArgs e)
    {
        divText = "you are hovering over the div";
    }

    // Define a parameter to set the increment value 
    [Parameter]
    public int IncrementValue { get; set; } = 1;
    private void IncrementCount()
    {
        currentCount += IncrementValue;
    }
}
